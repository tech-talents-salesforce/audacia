<aura:component implements="force:lightningQuickAction,force:hasRecordId" access="global">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="isLoading" type="Boolean" default="false" />
    <aura:attribute name="hasInitialized" type="Boolean" default="false" />

    <aura:handler name="init" value="{!this}" action="{!c.initialize}" />

    <lightning:spinner variant="brand" size="medium" alternativeText="Mise à jour en cours..." />

    <aura:if isTrue="{!v.isLoading}">
        <lightning:spinner alternativeText="Loading" size="small" />
    </aura:if>

    <!-- Affichage du bouton une fois terminé -->
    <aura:if isTrue="{!not(v.isLoading)}">
        <lightning:button label="Mise à jour terminée" />
    </aura:if>
</aura:component>